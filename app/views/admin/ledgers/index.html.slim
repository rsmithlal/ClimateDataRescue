- provide(:ledgers, "active")
- provide(:admin, "active")
- provide(:title, "Ledgers")

h1 Listing ledgers
/! List all ledgers and their attribute info in a table
table.table.table-striped
  thead
    tr
      th Title
      th Pages in Ledger
      th
      th
      th

  tbody
    - @ledgers.each do |ledger|
      tr
        td = ledger.title
        td = ledger.pages.count
        td = link_to 'Show', admin_ledger_path(ledger)
        td = link_to 'Edit', edit_admin_ledger_path(ledger)
        td = link_to 'Destroy', admin_ledger_path(ledger), data: {:confirm => 'Are you sure?'}, :method => :delete

